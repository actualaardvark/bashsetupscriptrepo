#!/bin/bash
obtainadminpassword(){
    read -p "Enter Admin Password (You'll only need to do this once): " adminpassword
	echo "$adminpassword" > /volumes/"Install macOS ventura"/password.txt
}
executeremotescript(){
    curl -s https://raw.githubusercontent.com/actualaardvark/bashsetupscriptrepo/main/Mac%20Guided%20Enrollment%20Script | bash
}
checkpasswordpresence(){
    if [ ! -f  /volumes/"Install macOS ventura"/password.txt ]; then
        obtainadminpassword
    else
    	executeremotescript
    	exit 1
    fi
}
checknetworkconnection(){
    if [[ $(ping -q -c1 1.1.1.1 &>/dev/null && echo online || echo offline) == "offline" ]]; then
        echo "No Network Connection"
        exit 1
    fi
}
installappcheckscript(){
    mkdir /volumes/"Install macOS ventura"/"Additional Scripts"
    curl -s https://raw.githubusercontent.com/actualaardvark/bashsetupscriptrepo/main/Additional%20Script/App%20Install%20Inspector > /volumes/"Install macOS ventura"/"Additional Scripts"/"App Install Inspector"
    chmod +x /volumes/"Install macOS ventura"/"Additional Scripts"/"App Install Inspector"
}
adminpassword=$(cat /volumes/"Install macOS ventura"/password.txt)

checknetworkconnection

installappcheckscript

checkpasswordpresence

executeremotescript